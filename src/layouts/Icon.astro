---
type Props = {
  href: string
}
const { href }: Props = Astro.props
---

<a 
  href={href} 
  target="_blank" 
  rel="noopener noreferrer"
  class="inline-flex items-center justify-center p-2 rounded-md hover:bg-accent transition-colors duration-200"
  aria-label="External link"
>
  <slot />
</a>
